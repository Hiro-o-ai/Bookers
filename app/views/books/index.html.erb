<div class="index">
<h2><b>Books</b></h2>
<table class="table" border="0" cellspacing="12">
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td>
				<%= link_to "show", book_path(book.id) %>
				<%= link_to "Edit", edit_book_path(book.id) %>
				<%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>


<h3><b>New book</b></h3>
<%= form_for(@book) do |f| %>
	
	<% if @book.errors.any? %>
	<div class="aler alert-warning">
	<h5> <%= @book.errors.count %>errors prohibited this book from being saved </h5>
	<ul>
		<% @book.errors.full_messages.each do |message| %>
		<li> <%= message %> </li>
		<% end %>
	</ul>
	</div>
	<% end %>

	<div class="blog-box">
	<h5>Title</h5>
	<%= f.text_field :title %>

	<h5>Body</h5>
	<%= f.text_area :body %>

	<br> <%= f.submit "Create Book" %>
	</div>

<% end %>

